@model Course;
<div class="card mb-3" id="course_@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <h2>@Model.Title</h2>
                </h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>