@model Kurs
@{

	ViewData["Title"] = "Kurs Güncelleme";

	<h2>@ViewData["Title"]</h2>
	<hr>
	<p>
		<b>@Model.KursId @Model.Baslik</b> isimli kursu silmek istiyor musunuz?
		<form asp-action="Delete" method="post">
			<input type="hidden" name="id" value="@Model.KursId">
			<button type="submit" class="btn btn-danger">Evet</button>
			<a asp-action="Index" class="btn btn-primary">Hayır</a>
		</form>
	</p>
	
}
