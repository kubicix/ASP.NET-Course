@model Ogrenci
@{

	ViewData["Title"] = "Öğrenci Güncelleme";

	<h2>@ViewData["Title"]</h2>
	<hr>
	<p>
		<b>@Model.OgrenciAd @Model.OgrenciSoyad</b> isimli öğrenciyi silmek istiyor musunuz?
		<form asp-action="Delete" method="post">
			<input type="hidden" name="id" value="@Model.OgrenciId">
			<button type="submit" class="btn btn-danger">Evet</button>
			<a asp-action="Index" class="btn btn-primary">Hayır</a>
		</form>
	</p>
	
}
